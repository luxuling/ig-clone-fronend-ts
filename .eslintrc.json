{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard-with-typescript",
    "airbnb",
    "airbnb-typescript"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "linebreak-style": "off",
    "react/react-in-jsx-scope": "off",
    "prettier/prettier": ["error", { "singleQuote": true }],
    "import/no-extraneous-dependencies": "off"
  }
}
